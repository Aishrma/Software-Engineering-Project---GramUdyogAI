@startuml
' skinparam classAttributeIconSize 0
hide empty members

package "User Management" {
    abstract class BaseUser {
        +userId: UUID
        +email: str
        +user_type: str
        +hashed_password: str
        +created_at: datetime
        +is_active: bool
        --
        +register()
        +login()
        +logout()
        +get_profile()
        +update_password()
        +verify_email()
    }

    class Individual {
        +first_name: str
        +last_name: str
        +phone_number: str
        +date_of_birth: date
    }
    class Company {
        +company_name: str
        +registration_number: str
        +industry: str
    }
    class NGO {
        +ngo_name: str
        +registration_number: str
        +focus_area: str
    }
    class Investor {
        +investor_name: str
        +investment_capacity: float
        +focus_sectors: List[str]
    }

    BaseUser <|-- Individual
    BaseUser <|-- Company
    BaseUser <|-- NGO
    BaseUser <|-- Investor
}

package "Core Features" {
    class Profile {
        +profileId: UUID
        +userId: UUID
        +skills: List[str]
        +resources: List[str]
        +location: str
        +experience: str
        +education: str
        --
        +update()
        +get_details()
    }

    class BusinessSuggestion {
        +suggestion_id: UUID
        +userId: UUID
        +title: str
        +description: str
        +investment_required: float
        +potential_revenue: float
        +created_at: datetime
        --
        +save()
        +get_details()
    }

    class GovernmentScheme {
        +scheme_id: UUID
        +name: str
        +description: str
        +eligibility_criteria: dict
        +benefits: str
        +application_process: str
        +deadline: date
        --
        +search()
        +filter_by_category()
        +check_eligibility()
    }

    class Course {
        +course_id: UUID
        +title: str
        +provider: str
        +duration: str
        +skill_level: str
        +certification: bool
        --
        +enroll()
        +get_details()
    }

    class Job {
        +job_id: UUID
        +userId: UUID
        +title: str
        +description: str
        +location: str
        +salary_range: str
        +posted_date: datetime
        --
        +post()
        +apply()
        +update()
        +delete()
    }

    class Event {
        +event_id: UUID
        +title: str
        +description: str
        +date: datetime
        +location: str
        +organizer: UUID
        --
        +create()
        +register()
        +get_attendees()
    }

    class Project {
        +project_id: UUID
        +userId: UUID
        +title: str
        +description: str
        +status: str
        +visibility: str
        --
        +create()
        +update()
        +showcase()
    }

    class Notification {
        +notification_id: UUID
        +userId: UUID
        +message: str
        +type: str
        +is_read: bool
        +created_at: datetime
        --
        +send()
        +mark_as_read()
    }
}

package "AI Services" {
    class RecommenderService {
        --
        +get_business_suggestions(profile: Profile): List[BusinessSuggestion]
        +get_course_recommendations(profile: Profile): List[Course]
        +get_scheme_recommendations(profile: Profile): List[GovernmentScheme]
        +get_job_recommendations(profile: Profile): List[Job]
    }

    class TranslationService {
        +supported_languages: List[str]
        --
        +translate(text: str, target_lang: str): str
        +detect_language(text: str): str
    }

    class SummaryService {
        --
        +summarize_youtube_video(url: str): str
        +generate_audio(text: str, language: str): AudioFile
        +create_visual_summary(video_url: str): dict
    }

    class AIAssistant {
        --
        +process_query(query: str): str
        +get_context_aware_response(user: BaseUser, query: str): str
    }

    class STTService {
        --
        +convert_speech_to_text(audio: AudioFile): str
        +process_audio(audio: AudioFile, language: str): str
    }
}

package "Database Layer" {
    class Database {
        --
        +connect()
        +disconnect()
        +execute_query()
    }
}


BaseUser "1" -- "1" Profile
BaseUser "1" -- "0..*" Notification : "receives"
Profile "1" -- "1" RecommenderService : "uses"
RecommenderService ..> BusinessSuggestion : "generates"
RecommenderService ..> Course : "recommends"
RecommenderService ..> GovernmentScheme : "recommends"
RecommenderService ..> Job : "recommends"

BaseUser "1" -- "0..*" Job : "posts/applies to"
BaseUser "1" -- "0..*" GovernmentScheme : "views"
BaseUser "1" -- "0..*" Event : "organizes/attends"
BaseUser "1" -- "0..*" Project : "creates"

SummaryService -- TranslationService : "uses"
AIAssistant -- TranslationService : "uses"

Database -- Profile : "stores"
Database -- BaseUser : "stores"
Database -- Job : "stores"
Database -- BusinessSuggestion : "stores"

@enduml
